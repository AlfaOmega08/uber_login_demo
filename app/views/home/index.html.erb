
<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h2>Log In</h2>
      <% if flash[:login_danger] %>
          <div class="alert alert-danger">
            <%= flash[:login_danger] %>
          </div>
      <% end %>
      <%= form_tag '/session', class: 'form-horizontal' do %>
          <div class="form-group">
            <%= label :username, 'Username', class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
                <%= text_field_tag :username, '', class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= label :password, 'Password', class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= password_field_tag :password, '', class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <%= check_box_tag :remember %> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= submit_tag 'Sign in', class: "btn btn-default" %>
            </div>
          </div>
      <% end %>
    </div>
</div>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <h2>Register</h2>
    <% if flash[:register_danger] %>
        <div class="alert alert-danger">
          <%= flash[:register_danger] %>
        </div>
    <% end %>
    <% if flash[:register_success] %>
        <div class="alert alert-success">
          <%= flash[:register_success] %>
        </div>
    <% end %>
    <%= form_tag '/register', class: 'form-horizontal' do %>
        <div class="form-group">
          <%= label :username, 'Username', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= text_field :user, :username, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= label :password, 'Password', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= password_field :user, :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= label :password_confirmation, 'Password confirmation', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= password_field :user, :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= submit_tag 'Register', class: "btn btn-default" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
